@{
    ViewData["Title"] = "Category Update";
}
<form action="/Categories/Save" method="post">
    @{ if (ViewBag.message != null)
    {
    <div class="alert alert-danger">@ViewBag.message</div>
    }
    }
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" name="Name" class="form-control" value="@ViewBag.category.Name">
    </div>
    <input type="hidden" name="Id" value="@ViewBag.category.Id">
    <button type="submit" class="btn btn-success  col-md-3">Update</button>
</form>